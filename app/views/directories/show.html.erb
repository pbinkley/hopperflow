<div id="header">
<h1>HopperFlow</h1>
<div id="controls">
<input onclick="javascript:hopper2item();" value="Hopper->Item" type="button">
<input onclick="javascript:item2hopper();" value="Hopper<-Item" type="button">
<input onclick="javascript:hopperOrForm(false);" value="Show Form" type="button" id="hopperOrForm">
<br>
<input onclick="javascript:toggleposted();" value="Toggle posted" type="button">
</div>
</div>
<p id="notice"><%= notice %></p>
<p>
  <strong>Dirpath:</strong>
  <%= @directory.dirpath %>
</p>

<%= link_to 'Edit', edit_directory_path(@directory) %> |
<%= link_to 'Back', directories_path %>


<div id="wrapper">
<!--
                  
                  
                  Posted Column
                  
                  
               -->
<div class="column" style="display: none;" id="postedcolumn">
<h2>Posted items (<span id="postedcount"></span>)</h2>
<div id="postedgroup"></div>
</div>
<!--
                  
                  
                  Hopper Column
                  
                  
               -->
<div class="column" id="hoppercolumn">
<h2 id="hopperh2">Hopper (<span id="hoppercount"></span>)</h2>
<h2 id="formh2">Item <span id="itemid-span"></span>
</h2>



<ul class="pagelist" id="hopperlist">

	<% @images.each do |image| 
	@image = image %>

<li class="page" id="row-<%= @image.id %>">
<ul class="pageimages">
<li id="i<%= @image.id %>" class="front image">
<div class="imageholder" id="i<%= @image.id %>-images">
<span class="iconspan" id="i<%= @image.id %>-icon"></span><%= link_to image.display_path(), class: "lightbox" do %>
		<%= image_tag @image.thumb_path(), alt: @image.basename, class: "thumb" %>
		<% end %>
</div>
<div class="controlsholder" id="i<%= @image.id %>-controls">
<span class="caption"><%= @image.basename %><%= @image.extension %></span>
<br>

<%= render 'images/form' %>
</div>
</li>
</ul>
</li>

<% end %>
<!--
                     
                     
                     Form (within hopper column)
                     
                     
                  -->
<form method="post" action="scans-item" onsubmit="javascript:submititem()" style="display: none;" id="metadataform">
<input id="submitbutton" value="submit" type="submit"><input value="" name="source" id="source" type="hidden"><input value="" name="folder" id="folder" type="hidden"><input name="bundleid" id="bundleid" type="hidden" value="0"><input name="bundlenum" id="bundlenum" type="hidden" value="0"><input value="" name="itemid" id="itemid" type="hidden">
<p>
<label for="pages">Pages:</label><input size="4" value="1" name="pages" id="pages" type="text"><span style="margin-left: 1em;">OCR</span><input name="ocr" id="ocr" checked="true" type="checkbox"><span style="margin-left: 1em;">Adjust</span><input name="adjust" id="adjust" type="checkbox">
</p>
<p>
<label for="date">Date:</label><input size="12" name="date" id="date" type="text">
</p>
<p>
<label for="creator">Creator:</label><input size="30" name="creator" id="creator" type="text">
</p>
<p>
<label for="addressee">Addressee:</label><input size="30" name="addressee" id="addressee" type="text">
</p>
<p>
<span for="type">Type:</span><select name="type"><option selected="true">letter</option><option>form</option><option>card</option><option>essay</option><option>telegram</option><option>notes</option><option>booklet</option><option>clipping</option><option>diary</option><option>play</option><option>notice</option><option>placeholder</option><option>picture</option><option>photograph</option></select>
                     
                        &nbsp;
                        <span for="copytype">Copy:</span><select name="copytype"><option selected="true">original</option><option>carbon</option><option>copy</option><option>photocopy</option></select>
</p>
<p>
<span for="script">Script:</span><select name="script"><option selected="true">typescript</option><option>manuscript</option><option>print</option></select>
                     
                        &nbsp;
                        
                        <span for="envelope">Envelope:</span><select name="envelope"><option selected="true">false</option><option>true</option></select>
</p>
<p>
<label for="title">Title:</label><input name="title" id="title" size="30" type="text">
</p>
<p>
<label for="summary">Summary:</label><textarea name="summary" id="summary" cols="30" rows="3"></textarea>
</p>
<p>
<label for="notes">Notes:</label><textarea name="notes" id="notes" cols="30" rows="3"></textarea>
</p>
<p>
<label for="tags">Tags:</label><input name="subject" id="subject" size="30" type="text">
</p>
<p>
<span for="tags">Answers:</span><input name="answers" id="answers" size="5" type="text">
                     
                        &nbsp;
                        <span for="tags">Answered By:</span><input name="answeredby" id="answeredby" size="5" type="text">
</p>
<p>
<span for="tags">Has Copy:</span><input name="hascopy" id="answers" size="5" type="text">
                        
                        &nbsp;
                        <span for="tags">Copy Of:</span><input name="copyof" id="answeredby" size="5" type="text">
</p>
<ul style="display: none;" id="formlist"></ul>
</form>
</div>
<!--
                  
                  
                  Item Column
                  
                  
               -->
<div class="column" id="itemcolumn">
<h2>Item (<span id="itemcount"></span>) <span id="bundlecount"></span>
</h2>
<ul class="pagelist" id="itemlist"></ul>
<input value="" id="itemhome" type="hidden">
</div>
<!--
                  
                  
                  Image Column
                  
                  
               -->
<div class="column" id="imagecolumn">
<h2>Images (<span id="imagecount"></span>)</h2>
<ul id="imagelist"></ul>
</div>
</div>
