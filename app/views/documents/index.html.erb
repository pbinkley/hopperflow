<h1>Listing documents</h1>

<table>
  <thead>
    <tr>
      <th>Source</th>
      <th>Folder</th>
      <th>Bundleid</th>
      <th>Bundlenum</th>
      <th>Itemid</th>
      <th>Pages</th>
      <th>Ocr</th>
      <th>Adjust</th>
      <th>Date</th>
      <th>Creator</th>
      <th>Addressee</th>
      <th>Type</th>
      <th>Copytype</th>
      <th>Script</th>
      <th>Envelope</th>
      <th>Title</th>
      <th>Summary</th>
      <th>Notes</th>
      <th>Tags</th>
      <th>Answers</th>
      <th>Answeredby</th>
      <th>Hascopy</th>
      <th>Copyof</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.source %></td>
        <td><%= document.folder %></td>
        <td><%= document.bundleid %></td>
        <td><%= document.bundlenum %></td>
        <td><%= document.itemid %></td>
        <td><%= document.pages %></td>
        <td><%= document.ocr %></td>
        <td><%= document.adjust %></td>
        <td><%= document.date %></td>
        <td><%= document.creator %></td>
        <td><%= document.addressee %></td>
        <td><%= document.type %></td>
        <td><%= document.copytype %></td>
        <td><%= document.script %></td>
        <td><%= document.envelope %></td>
        <td><%= document.title %></td>
        <td><%= document.summary %></td>
        <td><%= document.notes %></td>
        <td><%= document.tags %></td>
        <td><%= document.answers %></td>
        <td><%= document.answeredby %></td>
        <td><%= document.hascopy %></td>
        <td><%= document.copyof %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

